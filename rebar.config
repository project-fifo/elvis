{erl_opts,
 [
  {parse_transform, lager_transform},
  {src_dirs, ["src"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record, debug_info
 ]
}.

{deps,
 [
  {lager, "3.0.2"},
  {aleppo,  "0.*", {git, "https://github.com/inaka/aleppo.git",         {tag, "0.9.0"}}},
  {zipper,  ".*",  {git, "https://github.com/inaka/zipper.git",         {tag, "0.1.2"}}},
  {katana,  ".*",  {git, "https://github.com/inaka/erlang-katana.git",  {tag, "0.2.13"}}}
 ]
}.

{escript_name, "elvis"}.
{escript_incl_apps, [getopt, jiffy, ibrowse, aleppo, zipper, katana]}.



{profiles,
 [{test,
   [{deps,
     [{meck, "0.8.3"}]}]}]}.


{xref_checks, [
               %% since vlock isn't here ...
               undefined_function_calls,
               undefined_functions,
               locals_not_used,
               deprecated_function_calls, deprecated_functions]}.
